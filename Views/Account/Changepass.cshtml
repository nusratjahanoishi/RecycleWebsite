@model NextUses.Models.Auth.ChangeModel
@{
    ViewData["Title"] = "Password Change";
    Layout = "_FrontendLayout";
}
<div class="gray py-3">
    <div class="container">
        <div class="row">
            <div class="colxl-12 col-lg-12 col-md-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item"><a href="#">Pages</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Password Change</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<section class="middle">
    <div class="container">
        <div class="row justify-content-center">

            <div class="col-xl-6 col-lg-7 col-md-10 col-sm-12">
                <div class="bg-white border p-4 rounded shadow-sm">

                    <div class="mb-3 text-center">
                        <h3 class="mb-1">Change Your Password</h3>
                        <p class="text-muted">Update your password to keep your account secure.</p>
                    </div>

                    <form asp-controller="Account" asp-action="Changepass" method="post">
                        <!-- Email -->
                        <div class="form-group mb-3">
                            <label asp-for="Email">Email</label>
                            <input type="email" asp-for="Email" class="form-control" readonly />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <!-- Current Password -->
                        <div class="form-group mb-3">
                            <label asp-for="Password">Current Password</label>
                            <input type="password" asp-for="Password" class="form-control" placeholder="Enter current password" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <!-- New Password -->
                        <div class="form-group mb-3">
                            <label asp-for="NewPassword">New Password</label>
                            <input type="password" asp-for="NewPassword" class="form-control" placeholder="Enter new password" />
                            <span asp-validation-for="NewPassword" class="text-danger small"></span>
                        </div>

                        <!-- Confirm New Password -->
                        <div class="form-group mb-3">
                            <label asp-for="ConfirmNewPassword">Confirm New Password</label>
                            <input type="password" asp-for="ConfirmNewPassword" class="form-control" placeholder="Confirm new password" />
                            <span asp-validation-for="ConfirmNewPassword" class="text-danger small"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between">
                            <a asp-controller="Account" asp-action="Login"
                               class="btn btn-secondary w-50 mr-2">← Back</a>
                            <button type="submit" class="btn btn-primary w-50 ml-2">Change Password</button>
                        </div>
                    </form>

                    <p class="mt-4 text-center text-muted small">
                        Go back to
                        <a asp-controller="Account" asp-action="Login" class="text-primary fw-bold">Login</a>
                    </p>
                </div>
            </div>

        </div>
    </div>
</section>
