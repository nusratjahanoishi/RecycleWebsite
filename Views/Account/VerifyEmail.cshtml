@model NextUses.Models.Auth.EmailModel
@{
	ViewData["Title"] = "Verify Email";
	Layout = "_FrontendLayout";
}
<div class="gray py-3">
    <div class="container">
        <div class="row">
            <div class="colxl-12 col-lg-12 col-md-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item"><a href="#">Pages</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Email verify</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<section class="middle">
    <div class="container">
        <div class="row justify-content-center">

            <div class="col-xl-6 col-lg-7 col-md-10 col-sm-12">
                <div class="bg-white border p-4 rounded shadow-sm">

                    <div class="mb-3 text-center">
                        <h3 class="mb-1">Verify Your Email</h3>
                        <p class="text-muted">
                            We have sent a verification link to your email address.<br />
                            Please check your inbox and click the link to verify your account.
                        </p>
                    </div>

                    <form asp-controller="Account" asp-action="VerifyEmail" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label">Your Email Address</label>
                            <input type="email" asp-for="Email" class="form-control" placeholder="Enter your email" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div asp-validation-summary="All" class="text-danger small mb-3"></div>

                        <div class="d-flex justify-content-between">
                            <a asp-controller="Account" asp-action="Login"
                               class="btn btn-secondary w-50 mr-2">← Back</a>

                            <button type="submit" class="btn btn-primary w-50 ml-2">Resend Email</button>
                        </div>
                    </form>

                    <p class="mt-4 text-center text-muted small">
                        Already verified?
                        <a asp-controller="Account" asp-action="Login" class="text-primary fw-bold">Login here</a>
                    </p>
                </div>
            </div>

        </div>
    </div>
</section>
