                                <span class="activity-icon bgl-warning mr-3">
                                    <i class="fa fa-list fa-2x text-warning"></i>
                                </span>
                                <div class="media-body">
                                    <p class="fs-14 mb-2">Categories</p>
                                    <span class="title text-black font-w600">@Model.TotalCategories</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-sm-6">
                    <div class="card avtivity-card">
                        <div class="card-body">
                            <div class="media align-items-center">
                                <span class="activity-icon bgl-info mr-3">
                                    <i class="fa fa-box fa-2x text-info"></i>
                                </span>
                                <div class="media-body">
                                    <p class="fs-14 mb-2">Active Products</p>
                                    <span class="title text-black font-w600">@Model.ActiveProducts</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-sm-6">
                    <div class="card avtivity-card">
                        <div class="card-body">
                            <div class="media align-items-center">
                                <span class="activity-icon bgl-danger mr-3">
                                    <i class="fa fa-box-open fa-2x text-danger"></i>
                                </span>
                                <div class="media-body">
                                    <p class="fs-14 mb-2">Deactive Products</p>
                                    <span class="title text-black font-w600">@Model.DeactiveProducts</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-sm-6">
                    <div class="card avtivity-card">
