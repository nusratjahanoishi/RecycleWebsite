@model NextUses.Models.ViewModel.DashboardViewModel;
@using Microsoft.AspNetCore.Identity;

@{
	ViewData["Title"] = "Dashboard";
	Layout = "_BackendLayout";
}
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        .avtivity-card {
            transition: all 0.3s ease-in-out;
            color: blue; /* Sets the text color to blue */
            font-size: 15px; /* Sets the font size to 15 pixels */
        }

            .avtivity-card:hover {
                background-color: #17a2b8; /* Bootstrap 'info' color */
                color: white; /* Changes the text to white */
                box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
                transform: translateY(-5px);
            }
    </style>
</head>

<div class="content-body">
    <div class="container-fluid">
        <div class="row">
            @if (User.IsInRole("Admin"))
            {
                <div class="col-xl-3 col-sm-6">
                    <div class="card avtivity-card">
                        <div class="card-body">
                            <div class="media align-items-center">
                                <span class="activity-icon bgl-success mr-3">
                                    <i class="fa fa-users fa-2x text-success"></i>
                                </span>
                                <div class="media-body">
                                    <p class="fs-14 mb-2">Total Users</p>
                                    <span class="title text-black font-w600">@Model.TotalUsers</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-sm-6">
                    <div class="card avtivity-card">
                        <div class="card-body">
                            <div class="media align-items-center">
                                <span class="activity-icon bgl-primary mr-3">
                                    <i class="fa fa-motorcycle fa-2x text-primary"></i>
                                </span>
                                <div class="media-body">
                                    <p class="fs-14 mb-2">Total Riders</p>
                                    <span class="title text-black font-w600">@Model.TotalRiders</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-sm-6">
                    <div class="card avtivity-card">
                        <div class="card-body">
