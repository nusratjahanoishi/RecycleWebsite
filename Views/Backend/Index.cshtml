                <div class="col-xl-3 col-sm-6">
                    <div class="card avtivity-card">
                        <div class="card-body">
                            <div class="media align-items-center">
                                <span class="activity-icon bgl-danger mr-3">
                                    <i class="fa fa-thumbs-down fa-2x text-danger"></i>
                                </span>
                                <div class="media-body">
                                    <p class="fs-14 mb-2">Rejected Rider Apply</p>
                                    <span class="title text-black font-w600">@Model.RejectedRiderApply</span>
                                </div>
                            </div>
                        </div>
                    </div>
