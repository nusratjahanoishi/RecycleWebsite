                            </div>
                        </div>
                    </div>
                </div>
            }
            else if (User.IsInRole("Rider"))
            {
                <div class="col-xl-3 col-sm-6">
                    <div class="card avtivity-card">
                        <div class="card-body">
                            <div class="media align-items-center">
                                <span class="activity-icon bgl-warning mr-3">
                                    <i class="fa fa-clock fa-2x text-warning"></i>
                                </span>
                                <div class="media-body">
                                    <p class="fs-14 mb-2">Pending Orders</p>
                                    <span class="title text-black font-w600">@Model.PendingOrders</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-sm-6">
                    <div class="card avtivity-card">
                        <div class="card-body">
                            <div class="media align-items-center">
                                <span class="activity-icon bgl-success mr-3">
                                    <i class="fa fa-check fa-2x text-success"></i>
                                </span>
                                <div class="media-body">
                                    <p class="fs-14 mb-2">Completed Orders</p>
                                    <span class="title text-black font-w600">@Model.CompleteOrders</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-sm-6">
                    <div class="card avtivity-card">
                        <div class="card-body">
                            <div class="media align-items-center">
                                <span class="activity-icon bgl-warning mr-3">
                                    <i class="fa fa-hourglass-half fa-2x text-warning"></i>
                                </span>
                                <div class="media-body">
                                    <p class="fs-14 mb-2">Pending Rider Apply</p>
                                    <span class="title text-black font-w600">@Model.PendingRiderApply</span>
                                </div>
