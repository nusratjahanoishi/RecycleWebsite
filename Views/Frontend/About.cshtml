@{
    ViewData["Title"] = "About Page";
    Layout = "_FrontendLayout";
}
<!-- ======================= Top Breadcrumbs ======================== -->
<div class="bg-light py-3 border-bottom">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="#" class="text-decoration-none text-primary">Home</a></li>
                        <li class="breadcrumb-item"><a href="#" class="text-decoration-none text-primary">Pages</a></li>
                        <li class="breadcrumb-item active text-dark" aria-current="page">About Us</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- ======================= Hero Section ======================== -->
<section class="py-6 bg-gradient-to-r from-white to-gray-100">
    <div class="container">
        <div class="row py-5">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="display-4 fw-bold text-dark mb-4">About Our Company</h1>
                <p class="lead text-muted fs-5">Driving innovation through technology to create exceptional digital experiences</p>
            </div>
        </div>
    </div>
</section>
<!-- ======================= About Content ======================== -->
<section class="py-6">
    <div class="container">

        <!-- Our Story -->
        <div class="row align-items-center justify-content-between mb-5">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <div class="pe-lg-5">
                    <span class="text-primary fw-semibold small">WHO WE ARE</span>
                    <h2 class="h1 fw-bold text-dark mb-4">Our Story</h2>
                    <p class="text-muted mb-3 fs-5">
                        We are building a modern web platform that provides simple, fast, and reliable solutions for our users. Our primary goal is to simplify daily life through technology.
                    </p>
                    <p class="text-muted mb-4 fs-5">
                        Through our services, users can access essential information and services anytime, anywhere. Security, user-friendly design, and rapid response capabilities are our key features.
                    </p>
                    <a href="#" class="btn btn-primary btn-lg px-5 py-2 shadow-sm">Learn More</a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="position-relative rounded-4 shadow-lg overflow-hidden">
                    <img src="~/asset/frontend/img/about-1.png" class="img-fluid w-100" alt="Our Team" />
                    <div class="position-absolute top-0 start-0 w-100 h-100 bg-primary opacity-10"></div>
                </div>
            </div>
        </div>

        <!-- Our Vision -->
        <div class="row align-items-center justify-content-between mt-5 pt-5">
            <div class="col-lg-6 order-2 order-lg-1 mb-4 mb-lg-0">
                <div class="ps-lg-5">
                    <span class="text-primary fw-semibold small">OUR MISSION</span>
                    <h2 class="h1 fw-bold text-dark mb-4">Our Vision</h2>
                    <p class="text-muted mb-3 fs-5">
                        Our mission is to create a platform where users get maximum benefits without facing any technological complexities.
                    </p>
                    <p class="text-muted mb-4 fs-5">
                        We continuously work on new features and updates to provide users with an enhanced experience. Many more services will be added to the platform in the future.
                    </p>
                    <a href="#" class="btn btn-outline-primary btn-lg px-5 py-2 shadow-sm">Discover More</a>
                </div>
            </div>
            <div class="col-lg-6 order-1 order-lg-2">
                <div class="position-relative rounded-4 shadow-lg overflow-hidden">
                    <img src="~/asset/frontend/img/about-2.png" class="img-fluid w-100" alt="Our Vision" />
                    <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-10"></div>
                </div>
            </div>
        </div>

    </div>
</section>
<!-- ======================= Values Section ======================== -->
<section class="py-6 bg-gradient-to-r from-gray-100 to-white">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-12">
                <span class="text-primary fw-semibold small">WHY CHOOSE US</span>
                <h2 class="h1 fw-bold text-dark mb-3">Our Core Values</h2>
                <p class="text-muted lead fs-5">Driving excellence through our fundamental principles</p>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-lg-4 col-md-6">
                <div class="card border-0 shadow-sm h-100 hover-translate">
                    <div class="card-body text-center p-4">
                        <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 90px; height: 90px;">
                            <i class="fas fa-shield-alt fa-2x text-primary"></i>
                        </div>
                        <h4 class="fw-bold mb-3">Security First</h4>
                        <p class="text-muted fs-6">Top priority given to data protection and user privacy with advanced security measures.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="card border-0 shadow-sm h-100 hover-translate">
                    <div class="card-body text-center p-4">
                        <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 90px; height: 90px;">
                            <i class="fas fa-rocket fa-2x text-primary"></i>
                        </div>
                        <h4 class="fw-bold mb-3">Fast Performance</h4>
                        <p class="text-muted fs-6">Lightning-fast response times and optimized performance for seamless user experience.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="card border-0 shadow-sm h-100 hover-translate">
                    <div class="card-body text-center p-4">
                        <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 90px; height: 90px;">
                            <i class="fas fa-users fa-2x text-primary"></i>
                        </div>
                        <h4 class="fw-bold mb-3">User-Centric</h4>
                        <p class="text-muted fs-6">Design and development focused entirely on user needs and satisfaction.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .hover-translate:hover {
        transform: translateY(-8px);
        transition: all 0.3s ease-in-out;
    }
</style>
