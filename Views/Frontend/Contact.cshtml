@inject NextUses.Data.NextUsesDB DbContext
@{
	ViewData["Title"] = "Contact Page";
	Layout = "_FrontendLayout";
    var setting = DbContext.GeneralSettings.FirstOrDefault();
}


<div class="gray py-3">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb bg-transparent p-0 mb-0">
                        <li class="breadcrumb-item"><a asp-controller="Frontend" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Contact Us</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<!-- ======================= Contact Page ======================== -->
<section class="middle py-5">
    <div class="container">

        <!-- Title -->
        <div class="row justify-content-center mb-5">
            <div class="col-xl-8 text-center">
                <h2 class="ft-bold">Get In Touch</h2>
                <p class="text-muted">Have questions? We'd love to hear from you. Reach us through the details below.</p>
            </div>
        </div>

        <div class="row g-4">
            <!-- Address -->
            <div class="col-lg-4 col-md-6">
                <div class="card shadow-sm border-0 p-4 text-center h-100">
                    <div class="mb-3"><i class="fa fa-map-marker fa-2x text-primary"></i></div>
                    <h5 class="ft-medium">Our Address</h5>
                    <p class="mb-0">@setting.Address</p>
                </div>
            </div>

            <!-- Phone -->
            <div class="col-lg-4 col-md-6">
                <div class="card shadow-sm border-0 p-4 text-center h-100">
                    <div class="mb-3"><i class="fa fa-phone fa-2x text-success"></i></div>
                    <h5 class="ft-medium">Call Us</h5>
                    <p class="mb-1">Customer Care: <br /> <a href="tel:@setting.ContactPhone" class="text-dark">@setting.ContactPhone</a></p>
                </div>
            </div>

            <!-- Email -->
            <div class="col-lg-4 col-md-6">
                <div class="card shadow-sm border-0 p-4 text-center h-100">
                    <div class="mb-3"><i class="fa fa-envelope fa-2x text-danger"></i></div>
                    <h5 class="ft-medium">Email Us</h5>
                    <p class="mb-1"><a href="mailto:@setting.ContactEmail" class="text-dark">@setting.ContactEmail</a></p>
                </div>
            </div>
        </div>

