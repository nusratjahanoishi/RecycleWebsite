@model NextUses.Models.ViewModel.FrontendModel
@{
    ViewData["Title"] = "Home page";
    Layout = "_FrontendLayout";
}

<!-- ======================= Hero Section ======================== -->
<section class="hero-section">
    <div class="container-fluid px-0">
        <div class="row g-0">

            <!-- Categories Sidebar -->
            <div class="col-xl-2 col-lg-3 col-md-12">
                <div class="categories-sidebar bg-white rounded-3 shadow-sm mb-4 mt-4 ms-3">
                    <div class="sidebar-header px-4 py-3 border-bottom">
                        <h6 class="mb-0 fw-semibold text-dark">Top Categories</h6>
                    </div>
                    <div class="sidebar-content">
                        <ul class="category-list list-unstyled mb-0">
                            @foreach (var category in Model.Categories)
                            {
                                <li class="category-item border-bottom">
                                    <a asp-controller="Showcatrgoryall" asp-action="Showcategory" asp-route-id="@category.Id"
                                       class="d-block px-4 py-3 text-decoration-none text-dark hover-primary transition-all">
                                        <span class="d-flex align-items-center justify-content-between">
                                            @category.Name
                                            <i class="fas fa-chevron-right text-muted small"></i>
                                        </span>
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Hero Slider -->
            <div class="col-xl-10 col-lg-9 col-md-12">
                <div class="hero-slider-container">
                    <div class="hero-slider auto-slider">

                        <!-- Slide 1 -->
                        <div class="hero-slide" data-background-image="@Url.Content("~/asset/frontend/img/Banner1.jpg")">
                            <div class="container">
                                <div class="row align-items-center min-vh-60">
                                    <div class="col-lg-6 col-md-8">
                                        <div class="hero-content text-white">
                                            <span class="badge bg-white text-primary mb-3 px-3 py-2">New Collection</span>
                                            <h1 class="hero-title display-5 fw-bold mb-3">
                                                The Standard<br>With <span class="text-warning">Smartness</span>
                                            </h1>
                                            <p class="hero-subtitle lead mb-4 opacity-90">
                                                Apple 10 comes with 6.5 inches full HD + High Volume
                                            </p>
                                            <a href="#" class="btn btn-primary btn-lg px-5 py-3 fw-semibold">
                                                Shop Now <i class="fas fa-arrow-right ms-2"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Slide 2 -->
                        <div class="hero-slide" data-background-image="@Url.Content("~/asset/frontend/img/Banner2.jpg")">
                            <div class="container">
                                <div class="row align-items-center min-vh-60">
                                    <div class="col-lg-6 col-md-8">
                                        <div class="hero-content text-white">
                                            <span class="badge bg-success mb-3 px-3 py-2">Super Sale</span>
                                            <h1 class="hero-title display-5 fw-bold mb-3">
                                                The Standard<br>With <span class="text-success">Smartness</span>
                                            </h1>
                                            <p class="hero-subtitle lead mb-4 opacity-90">
                                                Xiomi Redmi 10 comes with 6.5 inches full HD + LCD Screen
                                            </p>
                                            <a href="#" class="btn btn-success btn-lg px-5 py-3 fw-semibold">
                                                Discover More <i class="fas fa-arrow-right ms-2"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Slide 3 -->
                        <div class="hero-slide" data-background-image="@Url.Content("~/asset/frontend/img/b-8.png")">
                            <div class="container">
                                <div class="row align-items-center min-vh-60">
                                    <div class="col-lg-6 col-md-8">
                                        <div class="hero-content text-dark">
                                            <span class="badge bg-warning text-dark mb-3 px-3 py-2">Limited Offer</span>
                                            <h1 class="hero-title display-5 fw-bold mb-3">
                                                Premium Quality<br>Exceptional Value
                                            </h1>
                                            <p class="hero-subtitle lead mb-4 opacity-90">
                                                Latest technology with unbeatable prices and premium features
                                            </p>
                                            <a href="#" class="btn btn-dark btn-lg px-5 py-3 fw-semibold">
                                                Explore Deals <i class="fas fa-arrow-right ms-2"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

<!-- ======================= Trending Products ======================== -->
<section class="products-section py-5 bg-light">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-lg-8 text-center">
                <span class="section-subtitle text-primary fw-semibold">Trendy Products</span>
                <h2 class="section-title display-6 fw-bold mt-2">Our Trending Products</h2>
                <p class="section-description text-muted lead">
                    Discover our most popular and trending products loved by customers
                </p>
            </div>
        </div>

        <div class="row g-4">
            @foreach (var product in Model.Products)
            {
                <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6">
                    <div class="product-card card border-0 shadow-sm h-100 transition-all">
                        <div class="product-badge position-absolute top-0 start-0 z-2">
                            <span class="badge bg-danger px-3 py-2 fw-semibold">@product.ProductStatus</span>
                        </div>
                        <div class="product-image position-relative overflow-hidden">
                            <a asp-controller="Frontend" asp-action="Productdetails" asp-route-id="@product.Id"
                               class="d-block product-image-link">
                                <img class="card-img-top product-img"
                                     style="width: 100%; height: 250px; object-fit: cover;"
                                     src="data:image/png;base64,@Convert.ToBase64String(product.Image)"
                                     alt="@product.Name" />
                                <div class="product-overlay position-absolute w-100 h-100 top-0 start-0 d-flex align-items-center justify-content-center">
                                    <span class="btn btn-primary btn-lg rounded-circle overlay-btn">
                                        <i class="fas fa-eye"></i>
                                    </span>
                                </div>
                            </a>
                        </div>
                        <div class="card-body pb-0">
                            <div class="product-category mb-2">
                                <span class="badge bg-light text-dark small">@product.Category.Name</span>
                            </div>
                            <h5 class="product-title fw-semibold mb-2">
                                <a asp-controller="Frontend" asp-action="Productdetails" asp-route-id="@product.Id"
                                   class="text-dark text-decoration-none">@product.Name</a>
                            </h5>
                            <div class="product-price d-flex align-items-center justify-content-between">
                                <span class="price fw-bold fs-5 text-primary">TK @product.Price</span>
                                <div class="product-actions">
                                    <a asp-controller="Frontend" asp-action="Productdetails" asp-route-id="@product.Id"
                                       class="btn btn-outline-primary btn-sm px-3">
                                        Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="row justify-content-center mt-5">
            <div class="col-auto">
                <a href="shop-style-1.html" class="btn btn-outline-primary btn-lg px-5 py-3">
                    Explore More Products <i class="fas fa-arrow-right ms-2"></i>
                </a>
            </div>
        </div>
    </div>
</section>

<!-- ======================= Categories Grid ======================== -->
<section class="categories-section py-5">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-lg-8 text-center">
                <span class="section-subtitle text-primary fw-semibold">Popular Categories</span>
                <h2 class="section-title display-6 fw-bold mt-2">Trending Categories</h2>
                <p class="section-description text-muted lead">
                    Browse through our most popular product categories
                </p>
            </div>
        </div>

        <div class="row g-4 justify-content-center">
            @foreach (var category in Model.Categories)
            {
                <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 col-6">
                    <div class="category-card text-center">
                        <a asp-controller="Showcatrgoryall" asp-action="Showcategory" asp-route-id="@category.Id"
                           class="category-link d-block text-decoration-none">
                            <div class="category-image mb-3">
                                <div class="image-container mx-auto bg-light rounded-3 p-4 shadow-sm transition-all">
                                    <img src="data:image/png;base64,@Convert.ToBase64String(category.Image)"
                                         class="img-fluid" width="80" alt="@category.Name">
                                </div>
                            </div>
                            <h6 class="category-name fw-semibold text-dark mb-0">@category.Name</h6>
                            <span class="category-count text-muted small">Explore Products</span>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- ======================= Features Section ======================== -->
<section class="features-section py-5 bg-dark text-white">
    <div class="container">
        <div class="row g-4">

            <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6">
                <div class="feature-item text-center">
                    <div class="feature-icon mb-3">
                        <div class="icon-container mx-auto bg-primary rounded-circle d-flex align-items-center justify-content-center">
                            <i class="fas fa-shipping-fast fa-2x"></i>
                        </div>
                    </div>
                    <h5 class="feature-title fw-semibold mb-2">Free Shipping</h5>
                    <p class="feature-description text-light opacity-90 mb-0">Capped at $10 per order</p>
                </div>
            </div>

            <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6">
                <div class="feature-item text-center">
                    <div class="feature-icon mb-3">
                        <div class="icon-container mx-auto bg-success rounded-circle d-flex align-items-center justify-content-center">
                            <i class="far fa-credit-card fa-2x"></i>
                        </div>
                    </div>
                    <h5 class="feature-title fw-semibold mb-2">Secure Payments</h5>
                    <p class="feature-description text-light opacity-90 mb-0">Up to 6 months installments</p>
                </div>
            </div>

            <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6">
                <div class="feature-item text-center">
                    <div class="feature-icon mb-3">
                        <div class="icon-container mx-auto bg-warning rounded-circle d-flex align-items-center justify-content-center">
                            <i class="fas fa-shield-alt fa-2x"></i>
                        </div>
                    </div>
                    <h5 class="feature-title fw-semibold mb-2">15-Days Returns</h5>
                    <p class="feature-description text-light opacity-90 mb-0">Shop with full confidence</p>
                </div>
            </div>

            <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6">
                <div class="feature-item text-center">
                    <div class="feature-icon mb-3">
                        <div class="icon-container mx-auto bg-info rounded-circle d-flex align-items-center justify-content-center">
                            <i class="fas fa-headset fa-2x"></i>
                        </div>
                    </div>
                    <h5 class="feature-title fw-semibold mb-2">24/7 Support</h5>
                    <p class="feature-description text-light opacity-90 mb-0">Get friendly support anytime</p>
                </div>
            </div>

        </div>
    </div>
</section>

<style>
    .min-vh-60 {
        min-height: 60vh;
    }

    .transition-all {
        transition: all 0.3s ease;
    }

    .hover-primary:hover {
        color: #0d6efd !important;
        transform: translateX(5px);
    }

    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 1rem 3rem rgba(0,0,0,.1) !important;
    }

    .product-image-link {
        position: relative;
        overflow: hidden;
    }

    .product-overlay {
        background: rgba(0,0,0,0.7);
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .product-card:hover .product-overlay {
        opacity: 1;
    }

    .overlay-btn {
        transform: scale(0);
        transition: transform 0.3s ease;
    }

    .product-card:hover .overlay-btn {
        transform: scale(1);
    }

    .category-link:hover .image-container {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0,0,0,.1);
    }

    .icon-container {
        width: 80px;
        height: 80px;
    }

    .hero-slide {
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        position: relative;
    }

        .hero-slide::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(45deg, rgba(0,0,0,0.4), rgba(0,0,0,0.1));
        }

    .hero-content {
        position: relative;
        z-index: 2;
    }

    .categories-sidebar {
        position: sticky;
        top: 100px;
    }

    .section-title {
        background: linear-gradient(45deg, #000, #333);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
</style>