@model NextUses.Models.ViewModel.FrontendModel
@{
	ViewData["Title"] = "Home page";
	Layout = "_FrontendLayout";
}
<section class="p-0">
	<div class="container">
		<div class="row">

			<div class="col-xl-3 col-lg-3 col-md-12 col-sm-12">
