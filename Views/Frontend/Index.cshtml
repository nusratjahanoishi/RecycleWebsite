</section>
<!-- ======================= Category & Slider ======================== -->
<!-- ======================= Product List ======================== -->
<section class="middle">
	<div class="container">

		<div class="row justify-content-center">
			<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
				<div class="sec_title position-relative text-center">
					<h2 class="off_title">Trendy Products</h2>
					<h3 class="ft-bold pt-3">Our Trending Products</h3>
				</div>
			</div>
		</div>

		<div class="row align-items-center rows-products">
			@foreach (var product in Model.Products)
			{
				<!-- Single -->
				<div class="col-xl-3 col-lg-4 col-md-6 col-6">
					<div class="product_grid card b-0">
						<div class="badge bg-red text-white position-absolute ft-regular ab-left text-upper">@product.ProductStatus</div>
					<div class="card-body p-0">
							<div class="shop_thumb position-relative">
								<a class="card-img-top d-block overflow-hidden" asp-controller="Frontend"
								   asp-action="Productdetails" asp-route-id="@product.Id">
									<img class="img-fluid"
										 style="width:2500px; height:250px; object-fit:cover;"
										 src="data:image/png;base64,@Convert.ToBase64String(product.Image)"
										 alt="@product.Name" />
								</a>
							</div>

					</div>
					<div class="card-footer b-0 p-0 pt-2 bg-white d-flex align-items-start justify-content-between">
						<div class="text-left">
							<div class="text-left">
									<div class="elso_titl"><span class="small">@product.Category.Name</span></div>
								<h5 class="fs-md mb-0 lh-1 mb-1"><a href="shop-single-v1.html">@product.Name</a></h5>
								
								<div class="elis_rty"><span class="ft-bold text-dark fs-sm">TK- @product.Price</span></div>
							</div>
						</div>
							<div class="text-right">
								<div class="text-right">
									<h3 class="fs-md mb-0 lh-1 mb-1 mt-3"><a asp-controller="Frontend" 
										asp-action="Productdetails" asp-route-id="@product.Id" class="btn btn-primary btn-sm px-4 py-2">Details</a></h3>
								</div>
							</div>
					</div>
				</div>
			</div>
			}
			

		</div>

		<div class="row justify-content-center">
			<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
				<div class="position-relative text-center">
					<a href="shop-style-1.html" class="btn stretched-link borders">Explore More<i class="lni lni-arrow-right ml-2"></i></a>
				</div>
			</div>
		</div>

	</div>
</section>
<!-- ======================= Product List ======================== -->

<!-- ======================= All Category ======================== -->
<section class="middle">
	<div class="container">

		<div class="row justify-content-center">
			<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
				<div class="sec_title position-relative text-center">
					<h2 class="off_title">Popular Categories</h2>
					<h3 class="ft-bold pt-3">Trending Categories</h3>
				</div>
			</div>
		</div>

		<div class="row align-items-center justify-content-center">
			@foreach (var category in Model.Categories)
			{
				<div class="col-xl-2 col-lg-2 col-md-3 col-sm-6 col-4">
					<div class="cats_side_wrap text-center mx-auto mb-3">
						<div class="sl_cat_01"><div class="d-inline-flex align-items-center justify-content-center p-4 circle mb-2"><a asp-controller="Showcatrgoryall" asp-action="Showcategory" asp-route-id="@category.Id" " class="d-block"><img src="data:image/png;base64,@Convert.ToBase64String(category.Image)" class="circle " width="100" alt="@category.Name"></a></div></div>
						<div class="sl_cat_02"><h6 class="m-0 ft-medium fs-sm"><a asp-controller="Showcatrgoryall" asp-action="Showcategory" asp-route-id="@category.Id" ">@category.Name</a></h6></div>
				</div>
			</div>
			}
		</div>

	</div>
</section>
