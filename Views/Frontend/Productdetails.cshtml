@model NextUses.Models.Product
@{
	ViewData["Title"] = "Product Details Page";
	Layout = "_FrontendLayout";
}
<section class="middle">
	<div class="container">
		<div class="row justify-content-between">

			<div class="col-xl-5 col-lg-6 col-md-12 col-sm-12">
				<div class="quick_view_slide">
					@if (Model.GalImages != null && Model.GalImages.Any())
					{
						foreach (var img in Model.GalImages)
						{
							<div class="single_view_slide d-block mb-4">
								<img src="data:image/png;base64,@Convert.ToBase64String(img.Image)" class="img-fluid rounded " style="height:500px; width:600px"alt=" "  />
							</div>
						}
					}
					else
					{
						<p>No gallery images available.</p>
					}
				</div>
			</div>

			<div class="col-xl-7 col-lg-6 col-md-12 col-sm-12">
				<div class="prd_details pl-3">

					<div class="prt_01 mb-1"><span class="text-light bg-info rounded px-2 py-1">@Model.ProductStatus</span></div>
					<div class="prt_02 mb-3">
						<h2 class="ft-bold mb-1">@Model.Category.Name</h2>
						<div class="text-left">
							<div class="star-rating align-items-center d-flex justify-content-left mb-1 p-0">

								<h4 class="">@Model.Name</h4>
							</div>
							<div class="elis_rty"><span class="ft-medium   fs-md mr-2">TK-@Model.Price</span></div>
						</div>
					</div>

					<div class="prt_03 mb-4">
						<p>@Model.Description</p>
					</div>



					<div class="prt_05 mb-4">
						<div class="form-row mb-7">
							<div class="col-12 text-center">
								<!-- Submit -->
								@if (User.Identity.IsAuthenticated)
								{
									<a asp-controller="Checkout"
									asp-action="Index" asp-route-id="@Model.Id" class="btn btn-dark text-white px-4 py-2">
										<i class="lni lni-shopping-basket mr-2"></i> Order Now
									</a>
								}
								else
								{
									<p class="text-danger mb-2">
										⚠ You need to login first before placing an order.
									</p>
									<a asp-controller="Account"asp-action="Login" class="btn btn-danger text-white px-4 py-2">Login Please</a>

								}
							</div>
						</div>
					</div>



				</div>
			</div>
		</div>
	</div>
</section>