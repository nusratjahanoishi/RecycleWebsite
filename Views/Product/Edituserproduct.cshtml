@model NextUses.Models.ViewModel.ProductViewModel
@using System.Security.Claims;
@{
    ViewData["Title"] = "Edit Product";
    Layout = "_FrontendLayout";
}

<div class="content-body">
    <div class="container-fluid">
        <div class="page-titles">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                <li class="breadcrumb-item active"><a href="javascript:void(0)">Edit Product</a></li>
            </ol>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Edit Product</h4>
                    </div>
                    <div class="card-body">
                        <form asp-action="Edituserproduct" method="post" enctype="multipart/form-data">
                            <div class="row">
                                <input type="hidden" asp-for="Product.Id" />
                                <input type="hidden" asp-for="Product.UserId" />

                                <!-- Product Name -->
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Product.Name" class="form-label">Product Name</label>
                                    <input asp-for="Product.Name" class="form-control" />
                                    <span asp-validation-for="Product.Name" class="text-danger"></span>
                                </div>

                                <!-- Price -->
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Product.Price" class="form-label">Price</label>
                                    <input asp-for="Product.Price" class="form-control" type="number" step="0.01" />
                                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                                </div>

                                <!-- Category Dropdown -->
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Product.CategoryId" class="form-label">Category</label>
                                    <select asp-for="Product.CategoryId" class="form-control">
                                        <option value="">-- Select Category --</option>
                                        @foreach (var category in Model.Categories)
                                        {
                                            <option value="@category.Id" selected="@(Model.Product.CategoryId == category.Id)">
                                                @category.Name
                                            </option>
                                        }
                                    </select>
                                    <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                                </div>

                                <!-- Product Status -->
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Product.ProductStatus" class="form-label">Product Status</label>
                                    <select asp-for="Product.ProductStatus" class="form-control">
                                        <option value="">-- Select Status --</option>
                                        @foreach (var status in NextUses.Helper.ConstantData.Productstatus)
                                        {
                                            <option value="@status" selected="@(Model.Product.ProductStatus == status)">
                                                @status
                                            </option>
                                        }
                                    </select>
                                    <span asp-validation-for="Product.ProductStatus" class="text-danger"></span>
                                </div>

                                <!-- Main Image -->
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Product.ImageFile" class="form-label">Product Image</label>
                                    <input asp-for="Product.ImageFile" class="form-control" type="file" />
                                    @if (Model.Product.Image != null)
                                    {
                                        <img src="data:image/png;base64,@Convert.ToBase64String(Model.Product.Image)" width="60" class="mt-2" />
                                    }
                                </div>

                                <!-- Gallery Images -->
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Product.GalImageFiles" class="form-label">Gallery Images</label>
                                    <input asp-for="Product.GalImageFiles" class="form-control" type="file" multiple />
                                    @if (Model.Product.GalImages != null && Model.Product.GalImages.Any())
                                    {
                                        <div class="mt-2">
                                            @foreach (var img in Model.Product.GalImages)
                                            {
                                                <img src="data:image/png;base64,@Convert.ToBase64String(img.Image)" width="60" class="me-2 mb-2" />
                                            }
                                        </div>
                                    }

                                </div>

                                <!-- Description -->
                                <div class="col-12 mb-3">
                                    <label asp-for="Product.Description" class="form-label">Description</label>
                                    <textarea asp-for="Product.Description" class="form-control" rows="4"></textarea>
                                </div>
                            </div>

                            <!-- Buttons -->
                            <div class="mt-3">
                                <button type="submit" class="btn btn-primary">Update Product</button>
                                <a asp-action="List" class="btn btn-secondary ms-2">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
