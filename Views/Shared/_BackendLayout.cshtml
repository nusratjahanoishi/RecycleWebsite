@using NextUses.Helper
@using System.Security.Claims
@using NextUses.Models   // যেখানে Users, GeneralSetting আছে
@inject NextUses.Data.NextUsesDB DbContext

@{
	Users currentUser = null;
	if (User.Identity.IsAuthenticated)
	{
		var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
		currentUser = DbContext.Users?.FirstOrDefault(u => u.Id == userId);
	}

	var setting = DbContext.GeneralSettings?.FirstOrDefault() ?? new GeneralSetting();
}



<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width,initial-scale=1">
	<title>@(setting.SiteName??"Not Available")</title>
	<!-- Favicon icon -->
	<link rel="icon" type="image/png" sizes="16x16" href="~/asset/backend/images/logo.png">
	<link rel="stylesheet" href="~/asset/backend/vendor/chartist/css/chartist.min.css">
	<link href="~/asset/backend/vendor/bootstrap-select/dist/css/bootstrap-select.min.css" rel="stylesheet">
	<link href="~/asset/backend/vendor/owl-carousel/owl.carousel.css" rel="stylesheet">
	<link href="~/asset/backend/css/style.css" rel="stylesheet">
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
	
	<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&family=Roboto:wght@100;300;400;500;700;900&display=swap" rel="stylesheet">
</head>
<body>

	<!--*******************
		Preloader start
	********************-->
	<div id="preloader">
		<div class="sk-three-bounce">
			<div class="sk-child sk-bounce1"></div>
			<div class="sk-child sk-bounce2"></div>
			<div class="sk-child sk-bounce3"></div>
		</div>
	</div>
	<!--*******************
		Preloader end
	********************-->
	<!--**********************************
		Main wrapper start
	***********************************-->
	<div id="main-wrapper">

		<!--**********************************
			Nav header start
		***********************************-->
		<div class="nav-header d-flex align-items-center justify-content-between sticky-top bg-white border-bottom p-2">
			<a asp-controller="Backend" asp-action="Index" class="brand-logo d-flex align-items-center">
				@if (setting?.Logo != null)
				{
					<!-- Desktop logo -->
					<img class="d-none d-md-inline-block img-fluid"
						 src="data:image/png;base64,@Convert.ToBase64String(setting.Logo)"
						 alt="Logo" style="max-height:50px; width:auto;" />

					<!-- Mobile logo -->
					<img class="d-inline-block d-md-none img-fluid"
						 src="data:image/png;base64,@Convert.ToBase64String(setting.Logo)"
						 alt="Logo Compact" style="max-height:50px; max-width:300px; width:100%;" />
				}
				else
				{
					<img class="d-none d-md-inline-block img-fluid"
						 src="~/asset/backend/images/logo.png"
						 alt="Default Logo" style="max-height:50px; width:auto;" />

					<img class="d-inline-block d-md-none img-fluid"
						 src="~/asset/backend/images/logo-text.png"
						 alt="Default Logo Compact" style="max-height:50px; max-width:300px; width:100%;" />
				}
			</a>

			<div class="nav-control">
				<div class="hamburger">
					<span class="line"></span><span class="line"></span><span class="line"></span>
				</div>
			</div>
		</div>


		<!--**********************************
			Nav header end
		***********************************-->
		
		<!--**********************************
			Header start
		***********************************-->
		<div class="header">
			<div class="header-content">
				<nav class="navbar navbar-expand">
					<div class="collapse navbar-collapse justify-content-between">
						<div class="header-left">
							<div class="dashboard_bar">
								<a asp-controller="Frontend" asp-action="Index" class="text-primary fw-bold">View Site</a>
							</div>
						</div>
						<ul class="navbar-nav header-right">
							<li class="nav-item">
								<div class="input-group search-area d-xl-inline-flex d-none">
									<div class="input-group-append">
										<span class="input-group-text"><a href="javascript:void(0)"><i class="flaticon-381-search-2"></i></a></span>
									</div>
									<input type="text" class="form-control" placeholder="Search here...">
								</div>
							</li>
							
							
							
							<li class="nav-item dropdown header-profile">
								<a class="nav-link" href="javascript:void(0)" role="button" data-toggle="dropdown">
									<img src="@(currentUser?.Image != null ? "data:image/png;base64," + Convert.ToBase64String(currentUser.Image) : Url.Content("~/asset/backend/images/default-user.png"))"
										 width="20" alt="User Image" />
									<div class="header-info">
										<span class="text-black"><strong>@currentUser?.Name</strong></span>
										<p class="fs-12 mb-0">@currentUser?.Role</p>
									</div>
								</a>
								<div class="dropdown-menu dropdown-menu-right p-0">

									<!-- Profile Link -->
									<a asp-controller="ProfileChange" asp-action="Information" asp-route-id="@currentUser.Id" class="dropdown-item d-flex align-items-center">
										<svg xmlns="http://www.w3.org/2000/svg" class="text-primary me-2" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
											<path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
											<circle cx="12" cy="7" r="4"></circle>
										</svg>
										<span class="flex-grow-1">Profile</span>
									</a>

									<!-- Divider -->
									<div class="dropdown-divider"></div>

									<!-- Logout Button -->
									<form asp-controller="Account" asp-action="Logout" method="post" class="m-0">
										@Html.AntiForgeryToken()
										<button type="submit" class="dropdown-item d-flex align-items-center text-danger p-2 " style=" margin-left: 17px;background: none; border: none; width: 100%;">
											<svg xmlns="http://www.w3.org/2000/svg" class="text-danger me-2" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
												<path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
												<polyline points="16 17 21 12 16 7"></polyline>
												<line x1="21" y1="12" x2="9" y2="12"></line>
											</svg>
											<span> Logout</span>
										</button>
									</form>

								</div>

							</li>
						</ul>
					</div>
				</nav>
			</div>
		</div>
		<!--**********************************
			Header end ti-comment-alt
		***********************************-->
		<!--**********************************
			Sidebar start
		***********************************-->
		<div class="deznav">
			<div class="deznav-scroll">
				<ul class="metismenu" id="menu">
					<li>
						<a class="has-arrow ai-icon" href="javascript:void()" aria-expanded="false">
							<i class="fa fa-home"></i>
							<span class="nav-text">Dashboard</span>
						</a>
						<ul aria-expanded="false">
							<li><a asp-controller="Backend" asp-action="Index">Dashboard</a></li>
						</ul>
					</li>
					@if (User.IsInRole(ConstantData.Admin))
					{
						<li>
							<a class="has-arrow ai-icon" aria-expanded="false">
								<i class="fa fa-users"></i>
								<span class="nav-text">All User</span>
							</a>
							<ul aria-expanded="false">
								<li><a asp-controller="User" asp-action="List">All User List</a></li>
								<li><a asp-controller="User" asp-action="Riderlist">Rider List</a></li>
							</ul>
						</li>

						<li>
							<a class="has-arrow ai-icon" href="javascript:void()" aria-expanded="false">
								<i class="fa fa-list"></i>
								<span class="nav-text">Category</span>
							</a>
							<ul aria-expanded="false">
								<li><a asp-controller="Category" asp-action="Create">Add & List</a></li>
							</ul>
						</li>

						<li>
							<a class="has-arrow ai-icon" href="javascript:void()" aria-expanded="false">
								<i class="fa fa-cube"></i>
								<span class="nav-text">Product</span>
							</a>
							<ul aria-expanded="false">
								<li><a asp-controller="Product" asp-action="Create">Add</a></li>
								<li><a asp-controller="Product" asp-action="List">List</a></li>
							</ul>
						</li>


						<li>
							<a class="has-arrow ai-icon" href="javascript:void()" aria-expanded="false">
								<i class="fa fa-cog"></i>
								<span class="nav-text">Genarel Setting </span>
							</a>
							<ul aria-expanded="false">
								<li><a asp-controller="SiteSetting" asp-action="Setting">Genarel Setting</a></li>
							</ul>
						</li>
					}
					<li>
						<a class="has-arrow ai-icon" href="javascript:void()" aria-expanded="false">
							<i class="fa fa-shopping-cart"></i>
							<span class="nav-text">Order</span>
						</a>
						<ul aria-expanded="false">
							<li><a asp-controller="Order" asp-action="OrderList">Order List</a></li>
						</ul>
					</li>

					<li>
						<a class="has-arrow ai-icon" href="javascript:void()" aria-expanded="false">
							<i class="fa fa-id-card"></i>
							<span class="nav-text">Apply Rider List</span>
						</a>
						<ul aria-expanded="false">
							<li><a asp-controller="ApplyRider" asp-action="RiderApplyList">Apply List</a></li>
						</ul>
					</li>
				</ul>

			</div>
		</div>
		<!--**********************************
			Sidebar end
		***********************************-->
		<!--**********************************
			Content body start
		***********************************-->
		@RenderBody()
		<!--**********************************
			Content body end
		***********************************-->
		<!--**********************************
			Footer start
		***********************************-->
		<div class="footer">
			<div class="copyright">
				<p>@(setting.FooterText ?? "Not Available")</p>
			</div>
		</div>
		<!--**********************************
			Footer end
		***********************************-->
		<!--**********************************
		   Support ticket button start
		***********************************-->
		<!--**********************************
		   Support ticket button end
		***********************************-->


	</div>
	<!--**********************************
		Main wrapper end
	***********************************-->
	<!--**********************************
		Scripts
	***********************************-->
	<!-- Required vendors -->
	<script src="~/asset/backend/vendor/global/global.min.js"></script>
	<script src="~/asset/backend/vendor/bootstrap-select/dist/js/bootstrap-select.min.js"></script>
	<script src="~/asset/backend/vendor/chart.js/Chart.bundle.min.js"></script>
	<script src="~/asset/backend/js/custom.min.js"></script>
	<script src="~/asset/backend/js/deznav-init.js"></script>
	<script src="~/asset/backend/vendor/owl-carousel/owl.carousel.js"></script>

	<!-- Chart piety plugin files -->
	<script src="~/asset/backend/vendor/peity/jquery.peity.min.js"></script>

	<!-- Apex Chart -->
	<script src="~/asset/backend/vendor/apexchart/apexchart.js"></script>

	<!-- Dashboard 1 -->
	<script src="~/asset/backend/js/dashboard/dashboard-1.js"></script>


	<script>
		document.addEventListener("DOMContentLoaded", function () {
			var message = '@TempData["SweetAlertMessage"]';
			var icon = '@TempData["SweetAlertIcon"]';

			if (message) {
				Swal.fire({
					icon: icon || 'info',  // success, error, warning, info, question
					title: message,
					timer: 3000,
					showConfirmButton: false
				});
			}
		});
	</script>
	<script>
		function carouselReview(){
			/*  testimonial one function by = owl.carousel.js */
			jQuery('.testimonial-one').owlCarousel({
				loop:true,
				autoplay:true,
				margin:30,
				nav:false,
				dots: false,
				left:true,
				navText: ['<i class="fa fa-chevron-left" aria-hidden="true"></i>', '<i class="fa fa-chevron-right" aria-hidden="true"></i>'],
				responsive:{
					0:{
						items:1
					},
					484:{
						items:2
					},
					882:{
						items:3
					},
					1200:{
						items:2
					},

					1540:{
						items:3
					},
					1740:{
						items:4
					}
				}
			})
		}
		jQuery(window).on('load',function(){
			setTimeout(function(){
				carouselReview();
			}, 1000);
		});
	</script>
</body>
</html>